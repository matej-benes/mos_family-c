rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // WARNING: These rules are insecure and are for prototyping purposes only.
    // In a production environment, you should implement proper authentication
    // and authorization checks.

    // Allow public read access to the users collection to enable custom
    // username/PIN login. Write access should be restricted.
    match /users/{userId} {
      allow read: if true;
      // For prototyping, allow writes. In production, this would be highly restricted.
      allow write: if true;
    }

    // Open access to devices for prototyping.
    match /devices/{deviceId} {
      allow read, write: if true;
    }

    // Open access to game state for prototyping.
    match /gameState/{gameStateId} {
      allow read, write: if true;
    }

    // Allow users to create and manage calls
    match /calls/{callId} {
      allow read, write: if true; // Insecure, for prototyping
    }
    
    match /calls/{callId}/{candidatesCollection}/{candidateId} {
       allow read, write: if true; // Insecure, for prototyping
    }

    match /chats/{chatId} {
      allow read, write: if true; // Insecure, for prototyping
      match /messages/{messageId} {
        allow read, write: if true; // Insecure, for prototyping
      }
    }

    match /settings/{settingId} {
      allow read: if true;
      allow write: if true; // Insecure for prototyping
    }

    match /events/{path=**} {
      allow read, write: if true; // Insecure for prototyping
    }
  }
}
